@page
@model Disable2faModel
@{
    ViewData["Title"] = "Kéttényezős hitelesítés (2FA) letiltása";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Ez a művelet csak a 2FA-t tiltja le.</strong>
    </p>
    <p>
        A 2FA letiltása nem módosítja a hitelesítő alkalmazásokban használt kulcsokat. Ha ki akarja cserélni a kulcsot
        hitelesítő alkalmazásban kell használni <a asp-page="./ResetAuthenticator">állítsa vissza a hitelesítő kulcsokat.</a>
    </p>
</div>

<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">A 2FA letiltása</button>
    </form>
</div>

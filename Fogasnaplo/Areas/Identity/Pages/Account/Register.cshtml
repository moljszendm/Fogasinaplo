@page
@model RegisterModel
@{
    ViewData["Title"] = "Regisztráció";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center">

    <div class="col-md-6">
        <h3 id="authentication">@ViewData["Title"]</h3>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-group">
                <label asp-for="Input.VezetekNev"></label>
                <input asp-for="Input.VezetekNev" class="form-control" />
                <span asp-validation-for="Input.VezetekNev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.KeresztNev"></label>
                <input asp-for="Input.KeresztNev" class="form-control" />
                <span asp-validation-for="Input.KeresztNev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Csapatnev"></label>
                <input asp-for="Input.Csapatnev" class="form-control" />
                <span asp-validation-for="Input.Csapatnev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.HorgaszIgazolvany"></label>
                <input asp-for="Input.HorgaszIgazolvany" class="form-control" />
                <span asp-validation-for="Input.HorgaszIgazolvany" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Regisztráció</button>
        </form>
    </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

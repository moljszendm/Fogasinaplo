@model Fogasnaplo.Models.Fogas

@{
    ViewData["Title"] = "Új fogás rögzítése";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Adatok</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nev" class="control-label"></label>
                <input asp-for="Nev" class="form-control" readonly placeholder=@Html.DisplayFor(fogas => fogas.Nev) />
                <span asp-validation-for="Nev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CsapatNev" class="control-label"></label>
                <input asp-for="CsapatNev"  readonly placeholder=@Html.DisplayFor(fogas => fogas.CsapatNev) class="form-control" />
                <span asp-validation-for="CsapatNev" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <select asp-for="HalFajtak" class="form-control">
                    <option value="Ponty">Ponty</option>
                    <option value="Amur">Amur</option>
                    <option value="Tok">Tok</option>
                    <option value="Egyeb">Egyéb</option>
                </select>               
            </div>
            <div class="form-group">
                <label asp-for="Suly" class="control-label"></label>
                <input asp-for="Suly" pattern="^\d*(\.\d{0,2})?$" type="number" class="form-control" />
                <span asp-validation-for="Suly" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allasok" class="control-label"></label>
                <input asp-for="Allasok" class="form-control" />
                <span asp-validation-for="Allasok" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Rögzítés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link-1" asp-action="Index">Vissza a fogásokhoz</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
